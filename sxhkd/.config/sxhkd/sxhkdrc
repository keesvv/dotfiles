# Reload
super + Home
    reload-wm

# Quit
super + End
    bspc quit

# Reboot
ctrl + alt + Delete
    systemctl reboot

# Suspend
super + shift + s
    systemctl suspend

# Terminal
super + Return
    st -e tmux

# Launcher
super + a
    rofi -show drun -display-drun "run:"

# Browser
super + b
    firefox

# File manager
super + z
    st -e lf

# Password manager
super + p
	rofi-pass

# Process viewer
ctrl + Escape
    st -e htop

# Music player
super + m
    st -e ncmpcpp

# Volume mixer
super + shift + m
    st -e pulsemixer

# Screenshot
Print
    maim -f png -s -u | xclip -sel clipboard -t image/png

# Toggle floating mode
super + shift + f
    bspc node -t \~floating

# Close window
super + q
    bspc node -c

# Kill window
super + k
    bspc node -k

# Fullscreen
super + f
    bspc desktop -l next

# Switch to desktop
super + {1-9}
   bspc desktop -f '^{1-9}'

# Move window to desktop
super + shift + {1-9}
   bspc node -d '^{1-9}' -f
