# Reload
super + Home
    reload-wm

# Terminal
super + Return
    st

# Launcher
super + a
    rofi -show drun -display-drun "run:"

# Browser
super + b
    firefox

# File manager
super + z
    st -e ranger

# Music player
super + m
    st -e ncmpcpp

# Toggle floating mode
super + shift + f
    bspc node -t \~floating

# Close window
super + q
    bspc node -c

# Kill window
super + k
    bspc node -k

# Switch to desktop
super + {1-9}
   bspc desktop -f '^{1-9}'

# Move window to desktop
super + shift + {1-9}
   bspc node -d '^{1-9}' -f
