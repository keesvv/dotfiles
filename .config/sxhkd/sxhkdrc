# Reload config
super + Home
    sh ~/.dotfiles/scripts/init/init.sh

# Run an application
super + a
    rofi -show drun

# Open Terminal
super + Return
    $TERMINAL

# Switch windows
alt + Tab
    rofi -show window

# Emoji picker
super + period
    rofimoji

super + slash 
    sh ~/.dotfiles/scripts/bitwarden.sh

# Transtr (quick)
super + comma
    sh ~/.dotfiles/scripts/transtr.sh short

# Transtr
super + shift + comma
    sh ~/.dotfiles/scripts/transtr.sh

# Close window
super + q
    bspc node -c

# Kill window
super + k
    bspc node -k

# Reload polybar config
super + u
    killall polybar && sleep 2s; ~/.config/polybar/start.sh

# Resize (WIP)
super + alt + {Left,Down,Up,Right}
    sh ~/.dotfiles/scripts/resize.sh {west,south,north,east}

# Expand window
super + shift + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract window
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Toggle floating mode
super + shift + f
    bspc node -t \~floating

# Shutdown
ctrl + alt + Delete
    sudo reboot

# Raise volume
XF86AudioRaiseVolume
    pamixer -i 2

# Lower volume
XF86AudioLowerVolume
    pamixer -d 2

# Mute audio
XF86AudioMute
    amixer -q set Master toggle

# Next track
XF86AudioNext
    playerctl -p mpd next

# Previous track
XF86AudioPrev
    playerctl -p mpd previous

# Skip 5 seconds
ctrl + XF86AudioNext
    playerctl -p mpd position 5+

# Prev 5 seconds
ctrl + XF86AudioPrev
    playerctl -p mpd position 5-

# Play/pause
XF86AudioPlay
    playerctl -p mpd play-pause

# Lock screen
super + l
    sh ~/.dotfiles/scripts/lock.sh

# Show task manager
ctrl + Escape
    $TERMINAL -e btm

# Fullscreen
super + f
    bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# Move window to next/previous desktop
super + shift + bracket{left,right}
    bspc node -d {prev,next} -f

# Move window to specific desktop
super + shift + {1-9,0}
    bspc node -d '^{1-9,10}' -f

# Switch to next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# Switch to specific desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Increase brightness
XF86MonBrightnessUp
    sudo brightnessctl set +10%

# Decrease brightness
XF86MonBrightnessDown
    sudo brightnessctl set 10%-

# End session
super + End
    killall Xorg

# Open file manager
super + z
    $TERMINAL -e ranger

# Switch keyboard layout
super + space
    sh ~/.dotfiles/scripts/kblayout.sh

# Screenshot
Print
    flameshot gui

# Connect to VPN
super + v
    $TERMINAL -e sudo protonvpn connect

# Disconnect from VPN
super + shift + v
    sudo protonvpn disconnect

# Newsboat
super + n
    $TERMINAL -e newsboat

# Network settings
super + shift + n
    $TERMINAL -e nmtui

# Preselect direction for new window
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Cancel the preselection
super + ctrl + space
	bspc node -p cancel

# Home directory search
super + s
    $TERMINAL -e ~/.dotfiles/scripts/search_home.sh

# Open browser
super + b
    $BROWSER

# Open music player
super + m
    $TERMINAL -e ncmpcpp

# Download bookmarked music
super + shift + m
    $TERMINAL -e pulsemixer

# Pick color
super + p
    sh ~/.dotfiles/scripts/color_picker.sh
