# Reload config
super + Home
    sh ~/.dotfiles/.config/bspwm/bspwmrc

# Run an application
super + a
    rofi -show drun

# Open Terminal
super + Return
    $TERMINAL

# Switch windows
alt + Tab
    rofi -show window

# Emoji picker
super + period
    rofimoji

# Close window
super + q
    xdotool getactivewindow windowclose

# Expand window
super + shift + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract window
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Toggle floating mode
super + shift + f
    bspc node -t \~floating

# Shutdown
ctrl + alt + Delete
    sudo reboot

# Raise volume
XF86AudioRaiseVolume
    amixer -q set Master 2%+ unmute

# Lower volume
XF86AudioLowerVolume
    amixer -q set Master 2%- unmute

# Mute audio
XF86AudioMute
    amixer -q set Master toggle

# Next track
XF86AudioNext
    playerctl next

# Previous track
XF86AudioPrev
    playerctl previous

# Skip 5 seconds
ctrl + XF86AudioNext
    playerctl position 5+

# Prev 5 seconds
ctrl + XF86AudioPrev
    playerctl position 5-

# Play/pause
XF86AudioPlay
    playerctl play-pause

# Lock screen
super + l
    ~/.dotfiles/scripts/lock.sh

# Show task manager
ctrl + Escape
    $TERMINAL -e ytop -p

# Fullscreen
super + f
    bspc node -t \~fullscreen

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# Move window to next/previous desktop
super + shift + bracket{left,right}
    bspc node -d {prev,next} -f

# Move window to specific desktop
super + shift + {1-9,0}
    bspc node -d '^{1-9,10}' -f

# Switch to next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# Switch to specific desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Increase brightness
XF86MonBrightnessUp
    sudo brightnessctl set +10%

# Decrease brightness
XF86MonBrightnessDown
    sudo brightnessctl set 10%-

# End session
super + End
    sudo killall Xorg

# Open file manager
super + z
    $TERMINAL -e ranger

# Switch keyboard layout
super + space
    sh ~/.dotfiles/scripts/kblayout.sh

# Screenshot
Print
    flameshot gui

# Connect to VPN
super + v
    $TERMINAL -e sudo protonvpn connect

# Disconnect from VPN
super + shift + v
    sudo protonvpn disconnect

# Newsboat
super + n
    $TERMINAL -e newsboat

# Network settings
super + shift + n
    $TERMINAL -e nmtui

# Preselect direction for new window
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Cancel the preselection
super + ctrl + space
	bspc node -p cancel

# Home directory search
super + s
    $TERMINAL -e ~/.dotfiles/scripts/search_home.sh

# Open browser
super + b
    $BROWSER

# Open music player
super + m
    $TERMINAL -e cmus

# Download bookmarked music
super + shift + m
    $TERMINAL -e ~/.dotfiles/scripts/youtubedl/download.sh
