# Reload config
super + Home
    sh ~/.dotfiles/.config/bspwm/bspwmrc

# Run an application
super + a
    rofi -show run

# Open Terminal
super + Return
    $TERMINAL

# Switch windows
alt + Tab
    rofi -show window

# Close window
super + q
    bspc node --close

# Expand window
super + shift + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract window
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Toggle floating mode
super + shift + f
    bspc node -t \~floating

# Shutdown
ctrl + alt + Delete
    sudo reboot

# Raise volume
XF86AudioRaiseVolume
    amixer -q set Master 2%+ unmute

# Lower volume
XF86AudioLowerVolume
    amixer -q set Master 2%- unmute

# Mute audio
XF86AudioMute
    amixer -q set Master toggle

# Lock screen
super + l
    betterlockscreen -t "Kees van Voorthuizen" -l

# Show task manager
ctrl + Escape
    $TERMINAL -e ytop

# Fullscreen
super + f
    bspc node -t \~fullscreen

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}

# Move window to other desktop
super + shift + bracket{left,right}
    bspc node -d {prev,next} -f

# switch to specific desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Increase brightness
XF86MonBrightnessUp
    brightnessctl set +10%

# Decrease brightness
XF86MonBrightnessDown
    brightnessctl set 10%-

# End session
super + End
    bspc quit

# Open file manager
super + z
    $TERMINAL -e ranger

# Switch keyboard layout
super + space
    sh ~/.dotfiles/scripts/kblayout.sh

# Screenshot
Print
    flameshot gui

# Connect to VPN
super + v
    $TERMINAL -e sudo protonvpn connect

# Disconnect from VPN
super + shift + v
    sudo protonvpn disconnect

# Play/pause current playing media
XF86AudioPlay
    playerctl play-pause

# Network settings
super + n
    $TERMINAL -e nmtui

# Preselect direction for new window
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Cancel the preselection
super + ctrl + space
	bspc node -p cancel

# Home directory search
super + s
    $TERMINAL -e ~/.dotfiles/scripts/search_home.sh

# Open browser
super + b
    $BROWSER
